<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aaish.tushare.Details"
    android:background="@color/bgColor">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frag_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:drawableLeft="@mipmap/name2"
        android:background="@drawable/edittext"
        android:ems="10"
        android:id="@+id/frag_name"
        android:layout_below="@+id/frag_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:hint="Full Name"
        android:textAlignment="center"
        android:editable="true"
        android:paddingBottom="0dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@mipmap/program"
        android:background="@drawable/edittext"
        android:ems="10"
        android:id="@+id/frag_type"
        android:layout_marginBottom="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/frag_name"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:editable="false"
        android:textSize="20sp"
        android:hint="User Type"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@mipmap/branch"
        android:background="@drawable/edittext"
        android:ems="10"
        android:id="@+id/frag_dept"
        android:layout_marginBottom="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/frag_type"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:editable="false"
        android:gravity="center_vertical"
        android:hint="Department"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@mipmap/calendar2"
        android:background="@drawable/edittext"
        android:ems="10"
        android:id="@+id/frag_year"
        android:layout_marginBottom="28dp"
        android:textColor="#000000"
        android:layout_below="@+id/frag_dept"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:editable="false"
        android:gravity="center_vertical"
        android:hint="Year"
        android:textSize="20sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Save details"
        android:id="@+id/save"
        android:background="@drawable/button"
        android:layout_below="@+id/frag_year"
        android:layout_centerHorizontal="true"
        android:textColor="@color/bgColor" />


</RelativeLayout>
