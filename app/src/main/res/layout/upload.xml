<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:id="@+id/editText9"
        android:inputType="textPersonName"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext2"
        android:height="40dp"
        android:drawableLeft="@mipmap/document_name"
        android:hint="Document Name"
        android:elevation="1dp"
        android:textColor="@color/bgColor"
        android:textSize="20sp"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:textColor="@color/bgColor"
        android:layout_below="@+id/editText9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/edittext2"
        android:layout_marginTop="28dp"
        android:height="40dp"
        android:drawableLeft="@mipmap/subject_frag"
        android:elevation="1dp"
        android:hint="Subject Name"
        android:textSize="20sp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bgColor"
        android:id="@+id/textView4"
        android:layout_below="@+id/editText10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/edittext2"
        android:elevation="1dp"
        android:layout_marginTop="28dp"
        android:height="40dp"
        android:drawableLeft="@mipmap/document_type"
        android:hint="Type of document"
        android:textSize="20sp"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:backgroundTint="@color/bgColor"
        android:id="@+id/button10"
        android:elevation="4dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:id="@+id/imageButton"
        android:layout_above="@+id/editText10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editText9"
        android:background="@mipmap/threedots"
        android:layout_toRightOf="@+id/editText9"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_marginLeft="2dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp" />

</RelativeLayout>